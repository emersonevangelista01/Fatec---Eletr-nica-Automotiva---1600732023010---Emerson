/*
4 - Faça a analise, o algoritmo e o código que coloque 3 números inteiros quaisquer em ordem decrescente.
autor:EE01
*/

#include <stdio.h>
#include <stdlib.h>
int main(void){
int  A, B, C,v1,v2,v3;

  printf("Digite um valor A: ");
  scanf("%d", &A);
  printf("Digite um valor B: ");
  scanf("%d", &B);
  printf("Digite um valor C: ");
  scanf("%d", &C);
  
  v1=A;
  v2=B;
  v3=C;

if (A>C){
    A=C;
    B=v2;
    C=v1;
}
if (A>B){
    A=B;
    B=v1;
    C=v3;
}
if (B>C){
    B=C;
    A=v1;
    C=v2;
}

  printf("\n\nOrdem decrescente:\t%d\t%d\t%d",C, B, A);
return(0);
  }
